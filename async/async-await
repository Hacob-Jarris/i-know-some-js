//pause execution of async function until promise resolved or rejected

//basic example:
async function getData() {
    const data = await fetch('https://jsonplaceholder.typicode.com/todos/1'); //wait here until resolved or rejected
    console.log(data);
}

//error handling with try/catch:
async function getData() {
    try {
        const data = await fetch('https://jsonplaceholder.typicode.com/todos/1'); //wait here until resolved or rejected
        console.log(data);
    } catch (error) {
        console.log(error);
    }
}